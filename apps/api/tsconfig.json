{
  "extends": "../../tsconfig.base.json",
  "files": [],
  "include": [],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "compilerOptions": {
    "module": "ESNext", // Ensures compatibility with ES modules
    "moduleResolution": "node",
